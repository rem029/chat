{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"paths": {
			"@common/*": ["../../common/src/*"],
			"@common": ["../../common/src/index"]
		},
		"allowJs": true,
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["./src/*", "src/index.ts"]
}
